<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/img"
        android:src="@drawable/livro"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/btTrade"
        android:layout_toStartOf="@+id/btTrade"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/textView13" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btTrade"
        android:src="@drawable/ic_trade"
        android:layout_alignTop="@+id/img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btFav"
        android:src="@drawable/ic_fav"
        android:layout_below="@+id/textView11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaa\naaaaaaaaaaaaaa"
        android:id="@+id/txtdesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="35 / 279"
        android:id="@+id/txtpg"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"
        android:layout_toRightOf="@+id/img"
        android:layout_toEndOf="@+id/img"
        android:gravity="center_vertical"
        android:layout_above="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marcar para troca"
        android:id="@+id/textView11"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_below="@+id/btTrade"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/img"
        android:layout_toEndOf="@+id/img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marcar como favorito"
        android:id="@+id/textView12"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_below="@+id/btFav"
        android:layout_toRightOf="@+id/img"
        android:layout_toEndOf="@+id/img"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PÃ¡ginas lidas"
        android:id="@+id/textView13"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_above="@+id/txtdesc"
        android:layout_toRightOf="@+id/img"
        android:layout_toEndOf="@+id/img" />
</RelativeLayout>